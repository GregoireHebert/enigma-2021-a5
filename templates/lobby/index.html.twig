{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}

    <h2>Joueurs en attente :</h2>
    <ul>
    {% for player in players %}
        <li>{{ player.name }} ({{ player.ratio }})</li>
    {% else %}
        <li>Aucun joueur</li>
    {% endfor %}
    </ul>

    <h2>Matchs en cours :</h2>
    <ul>
        {% for encounter in encounters|matchEnCours %}
            <li>
                <a href="{{ path('score', {'encounter': encounter.id}) }}">
                {{ encounter.playerA.name }} ({{ encounter.playerA.ratio }}) VS {{ encounter.playerB.name }} ({{ encounter.playerB.ratio }})
                </a>
            </li>
        {% else %}
            <li>Aucun match en cours</li>
        {% endfor %}
    </ul>

    <h2>Matchs terminés :</h2>
    <ul>
        {% for encounter in encounters|matchTerminé %}
            <li>
                {{ encounter.playerA.name }} ({{ encounter.playerA.ratio }}) VS {{ encounter.playerB.name }} ({{ encounter.playerB.ratio }})
            </li>
        {% else %}
            <li>Aucun match terminé</li>
        {% endfor %}
    </ul>
{% endblock %}
